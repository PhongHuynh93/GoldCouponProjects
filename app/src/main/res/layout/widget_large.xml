<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:padding="@dimen/widget_margin">


    <ImageView
        android:id="@+id/widget_post_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/textview_padding_small"
        android:gravity="start|center_vertical"
        android:src="@drawable/copertinaapp" />

    <TextView
        android:id="@+id/widget_post_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="@dimen/textview_padding_small"
        android:paddingLeft="@dimen/textview_padding_small"
        android:paddingRight="@dimen/textview_padding_small"
        tools:text="GoldCoupon" />

</FrameLayout>